<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/constraintLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorCream"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".SearchJobs"
    tools:layout_editor_absoluteY="25dp"
    tools:showIn="@layout/activity_search_jobs"
    android:clipChildren="false">


    <EditText
        android:id="@+id/editText"
        android:layout_width="318dp"
        android:layout_height="37dp"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:drawableEnd="@drawable/ic_search_grey_resize"
        android:background="@drawable/white_textbox_rounded"
        android:elevation="10dp"
        android:hint="Keywords, Job Title or Company"
        android:inputType="text"
        android:paddingHorizontal="10dp"
        android:shadowColor="@color/shadowColor"
        android:textSize="14sp"
        android:drawablePadding="5dp"
        app:layout_constraintBottom_toTopOf="@+id/regionSpinner"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/coffeeshop" />

    <Button
        android:id="@+id/searchButton"
        android:layout_width="318dp"
        android:layout_height="37dp"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/search_button_selector"
        android:text="Search Jobs"
        android:textAllCaps="false"
        android:textColor="@drawable/searchbutton_text_color_selector"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/coffeeshop"
        app:layout_constraintVertical_bias="0.871" />

    <Spinner
        android:id="@+id/jobTypeSpinner"
        android:layout_width="318dp"
        android:layout_height="37dp"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="168dp"
        android:background="@drawable/white_textbox_rounded"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/coffeeshop"
        app:layout_constraintVertical_bias="0.0" />

    <Spinner
        android:id="@+id/categorySpinner"
        android:layout_width="318dp"
        android:layout_height="37dp"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/white_textbox_rounded"
        app:layout_constraintBottom_toTopOf="@+id/jobTypeSpinner"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/coffeeshop"
        app:layout_constraintVertical_bias="0.964" />

    <Spinner
        android:id="@+id/regionSpinner"
        android:layout_width="318dp"
        android:layout_height="37dp"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/white_textbox_rounded"
        app:layout_constraintBottom_toTopOf="@+id/categorySpinner"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/coffeeshop"
        app:layout_constraintVertical_bias="0.921" />

    <ImageView
        android:id="@+id/coffeeshop"
        android:layout_width="match_parent"
        android:layout_height="241dp"
        android:background="@drawable/coffee_shop_blur"
        android:contentDescription="@string/content_desc"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <ImageView
        android:id="@+id/wereOnTheJob"
        android:layout_width="214dp"
        android:layout_height="121dp"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:contentDescription="@string/content_desc"
        app:layout_constraintBottom_toBottomOf="@+id/coffeeshop"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.932"
        app:srcCompat="@drawable/were_on_the_job" />

    <ImageView
        android:id="@+id/sjsLogo"
        android:layout_width="92dp"
        android:layout_height="68dp"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:contentDescription="@string/content_desc"
        app:layout_constraintBottom_toBottomOf="@+id/coffeeshop"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/coffeeshop"
        app:layout_constraintVertical_bias="0.05"
        app:srcCompat="@drawable/sjs_logo" />

    <ImageView
        android:id="@+id/redLine"
        android:layout_width="5dp"
        android:layout_height="101dp"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:contentDescription="@string/content_desc"
        app:layout_constraintBottom_toBottomOf="@+id/coffeeshop"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.168"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.87"
        app:srcCompat="@drawable/red_vertical_line" />

    <ImageView
        android:id="@+id/imageView6"
        android:layout_width="20dp"
        android:layout_height="21dp"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:contentDescription="@string/content_desc"
        app:layout_constraintBottom_toBottomOf="@+id/regionSpinner"
        app:layout_constraintEnd_toEndOf="@+id/regionSpinner"
        app:layout_constraintHorizontal_bias="0.975"
        app:layout_constraintStart_toStartOf="@+id/regionSpinner"
        app:layout_constraintTop_toTopOf="@+id/regionSpinner"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@drawable/downarrow" />

    <ImageView
        android:id="@+id/imageView7"
        android:layout_width="20dp"
        android:layout_height="21dp"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:contentDescription="@string/content_desc"
        app:layout_constraintBottom_toBottomOf="@+id/categorySpinner"
        app:layout_constraintEnd_toEndOf="@+id/categorySpinner"
        app:layout_constraintHorizontal_bias="0.975"
        app:layout_constraintStart_toStartOf="@+id/categorySpinner"
        app:layout_constraintTop_toTopOf="@+id/categorySpinner"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@drawable/downarrow" />

    <ImageView
        android:id="@+id/imageView8"
        android:layout_width="20dp"
        android:layout_height="21dp"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:contentDescription="@string/content_desc"
        app:layout_constraintBottom_toBottomOf="@+id/jobTypeSpinner"
        app:layout_constraintEnd_toEndOf="@+id/jobTypeSpinner"
        app:layout_constraintHorizontal_bias="0.975"
        app:layout_constraintStart_toStartOf="@+id/jobTypeSpinner"
        app:layout_constraintTop_toTopOf="@+id/jobTypeSpinner"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@drawable/downarrow" />


</android.support.constraint.ConstraintLayout>